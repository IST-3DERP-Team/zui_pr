<core:FragmentDefinition 
    xmlns="sap.m" 
    xmlns:l="sap.ui.layout" 
    xmlns:f="sap.ui.layout.form" 
    xmlns:core="sap.ui.core" 
    class="sapUiSizeCompact" 
    xmlns:tnt="sap.tnt"
    xmlns:c="zuipr.control" 
    xmlns:t="sap.ui.table"
>
    <Panel id="SupplyTypHeaderPanel" expandable="true" expanded="true" width="auto" class="sapUiSizeCompact">

            <!-- Style Header Form -->
            <f:Form id="SupplyTypHeaderForm" editable="true" class="sapUiNoContentPadding">
                <f:layout>
                    <f:ResponsiveGridLayout columnsXL="4" columnsL="3" columnsM="3" singleContainerFullSize="false" />
                </f:layout>
                <f:formContainers>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement label="{captionMsg>/INFORECORD}" visible="true">
                                <f:fields>
                                    <Input id="INFORECORD" value="{path: 'headerData>/INFORECORD', mandatory: 'INFORECORD', editable: 'INFORECORD'}" editable="false" valueStateText="Required" 
                                        change="onHeaderChange" liveChange="onHeaderChange"/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                           <f:formElements>
                            <f:FormElement label="{captionMsg>/PURORG}" visible="true">
                                <f:fields>
                                    <Input id="PURORG" value="{path: 'headerData>/PURORG', mandatory: 'PURORG', editable: 'PURORG'}" editable="false" valueStateText="Required" 
                                        change="onHeaderChange" liveChange="onHeaderChange" valueHelpRequest="handleValueHelp" showSuggestion="true"
                                        suggestionItems="{path: 'purchOrgSource>/'}" suggestionItemSelected="onSuggestionItemSelected" showValueHelp="true" 
                                        >
                                        <suggestionItems>
                                            <core:Item key="{purchOrgSource>Item}" text="{purchOrgSource>Item} - {purchOrgSource>Desc}" />
                                        </suggestionItems>
                                        <layoutData>
                                            <FlexItemData growFactor="1" />
                                        </layoutData>
                                    </Input>

                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                        <f:formElements>
                            <f:FormElement label="{captionMsg>/VENDOR}" visible="true">
                                <f:fields>
                                    <Input id="VENDOR" value="{path: 'headerData>/VENDOR', mandatory: 'VENDOR', editable: 'VENDOR'}" editable="false" valueStateText="Required" 
                                        change="onHeaderChange" liveChange="onHeaderChange" valueHelpRequest="handleValueHelp" showSuggestion="true"
                                        suggestionItems="{path: 'vendorSource>/'}" suggestionItemSelected="onSuggestionItemSelected" showValueHelp="true" 
                                         >
                                        <suggestionItems>
                                             <core:Item key="{vendorSource>Item}" text="{vendorSource>Item} - {vendorSource>Desc}" />
                                        </suggestionItems>
                                        <layoutData>
                                            <FlexItemData growFactor="1" />
                                        </layoutData>
                                    </Input>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                        
                        <f:layoutData>
                            <l:GridData span="XL5 L7 M7 S12" />
                        </f:layoutData>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </Panel>
</core:FragmentDefinition>