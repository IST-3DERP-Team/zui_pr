<core:FragmentDefinition 
    xmlns="sap.m" 
    xmlns:l="sap.ui.layout" 
    xmlns:f="sap.ui.layout.form" 
    xmlns:core="sap.ui.core" 
    class="sapUiSizeCompact" 
    xmlns:tnt="sap.tnt"
    xmlns:c="zuipr.control" 
    xmlns:t="sap.ui.table"
>
    <Panel id="CustDataHeaderPanel" expandable="true" expanded="true" width="auto" class="sapUiSizeCompact">

            <!-- Style Header Form -->
            <f:Form id="CustDataHeaderForm" editable="true">
                <f:layout>
                    <f:ResponsiveGridLayout columnsXL="5" columnsL="5" columnsM="5" singleContainerFullSize="false" />
                </f:layout>
                <f:formContainers>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement label="{captionMsg>/SUPTYP}" visible="true">
                                <f:fields>
                                    <Input id="SUPTYP" value="{path: 'headerData>/SUPTYP', mandatory: 'SUPTYP', editable: 'SUPTYP'}" editable="false" valueStateText="Required" 
                                        change="onHeaderChange" liveChange="onHeaderChange"/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                        <f:formElements>
                            <f:FormElement label="{captionMsg>/SALESGRP}" visible="true">
                                <f:fields>
                                    <Input id="SALESGRP" value="{path: 'headerData>/SALESGRP', mandatory: 'SALESGRP', editable: 'SALESGRP'}" editable="false" valueStateText="Required" 
                                        change="onHeaderChange" liveChange="onHeaderChange"/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                        <f:formElements>
                            <f:FormElement label="{captionMsg>/CUSTGRP}" visible="true">
                                <f:fields>
                                    <Input id="CUSTGRP" value="{path: 'headerData>/CUSTGRP', mandatory: 'CUSTGRP', editable: 'CUSTGRP'}" editable="false" valueStateText="Required" 
                                        change="onHeaderChange" liveChange="onHeaderChange"/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                        <f:formElements>
                            <f:FormElement label="{captionMsg>/SEASON}" visible="true">
                                <f:fields>
                                    <Input id="SEASONCD" value="{path: 'headerData>/SEASONCD', mandatory: 'SEASONCD', editable: 'SEASONCD'}" editable="false" valueStateText="Required" 
                                        change="onHeaderChange" liveChange="onHeaderChange"/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                        <f:formElements>
                            <f:FormElement label="{captionMsg>/CUSTSTYLE}" visible="true">
                                <f:fields>
                                    <Input id="CUSTSTYLE" value="{path: 'headerData>/CUSTSTYLE', mandatory: 'CUSTSTYLE', editable: 'CUSTSTYLE'}" editable="false" valueStateText="Required" 
                                        change="onHeaderChange" liveChange="onHeaderChange"/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                        <f:layoutData>
                            <l:GridData span="XL5 L7 M7 S12" />
                        </f:layoutData>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </Panel>
</core:FragmentDefinition>