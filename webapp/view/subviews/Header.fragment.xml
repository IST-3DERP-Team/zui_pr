                                        </suggestionItems>
                                        <layoutData>
                                            <FlexItemData growFactor="1" />
                                        </layoutData>
                                    </Input> -->
                                    <Input id="PURGRP" 
                                        type="Text"
                                        value="{
                                            parts: [{path: 'headerData>/PURGRP'}, { value: 'onSuggPURGRP' }, { value: 'Item' }, { value: 'Desc' }, { value: 'ValueKey' }],
                                            formatter: '.formatValueHelp',
                                            mandatory: 'PURGRP'
                                        }" 
