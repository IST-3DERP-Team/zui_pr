<core:FragmentDefinition xmlns="sap.m" xmlns:f="sap.ui.layout.form" 
xmlns:core="sap.ui.core" class="sapUiSizeCompact"
>
        <Panel id="headerPanel" expandable="false" expanded="true" width="auto" class="sapUiSizeCompact">

            <headerToolbar>
                <Toolbar id="TB1" height="2rem">
                    <Title text="{captionMsg>/HEADER}" />
                    <ToolbarSpacer />
                    <Button id="btnHdrSave" type="Ghost" icon="sap-icon://save" tooltip="{captionMsg>/SAVE}" press="onSaveHeader" visible="true"/> 
                    <Button id="btnHdrCancel" type="Ghost" icon="sap-icon://decline" tooltip="{captionMsg>/CANCEL}" press="cancelHeaderEdit" visible="true"/> 
                    
                </Toolbar>
            </headerToolbar>

            <MessageStrip id="HeaderMessageStrip" text="" showIcon="true" showCloseButton="true" class="sapUiMediumMarginBottom" type="Error" visible="false"/>
            
            <f:Form id="SalesDocHeaderForm1" editable="false" class="sapUiNoContentPadding">
                <f:layout>
                    <f:ResponsiveGridLayout columnsXL="3" columnsL="2" columnsM="1" singleContainerFullSize="false" />
                </f:layout>
                <f:formContainers>
                    <f:FormContainer ariaLabelledBy="Grp1" class="sapUiNoContentPadding" >
                        <f:formElements>
                            <f:FormElement id="feDOCTYP" label="{captionMsg>/DOCTYP}" visible="{= ${VisibleFieldsData>/DOCTYP} === true ? true : false }">
                                <f:fields>
                                    <Input id="DOCTYP" value="{path: 'headerData>/DOCTYP', mandatory: 'DOCTYP'}" showSuggestion="true" suggestionItems="{path: 'docTypSource>/'}" showValueHelp="true" editable="{EditableFieldsData>/CUSTGRP}" valueStateText="Required"
                                         change="onInputLiveChange" valueHelpRequest="handleValueHelp" liveChange="onInputLiveChange">
                                        <suggestionItems>
                                            <core:Item key="{docTypSource>Item}" text="{docTypSource>Item}" />
                                        </suggestionItems>
                                        <layoutData>
                                            <FlexItemData growFactor="1" />
                                        </layoutData>
                                    </Input>
                                </f:fields>
                            </f:FormElement>   
                            <f:FormElement label="{captionMsg>/PRNO}" visible="{= ${VisibleFieldsData>/PRNO} === true ? true : false }">
                                <f:fields>
                                    <Input id="PRNO" value="{headerData>/PRNO}" showSuggestion="true" showValueHelp="true" editable="{EditableFieldsData>/PRNO}" valueStateText="Required"
                                         change="onInputLiveChange" valueHelpRequest="handleValueHelp" liveChange="onInputLiveChange">
                                    </Input>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement id="fePURGRP" label="{captionMsg>/PURCHGRP}" visible="{= ${VisibleFieldsData>/PURGRP} === true ? true : false }">
                                <f:fields>
                                    <Input id="PURGRP" value="{path: 'headerData>/PURGRP', mandatory: 'PURGRP'}" showSuggestion="true" suggestionItems="{path: 'purchGrpSource>/'}" showValueHelp="true" editable="{EditableFieldsData>/PURGRP}" valueStateText="Required"
                                         change="onInputLiveChange" valueHelpRequest="handleValueHelp" liveChange="onInputLiveChange">
                                        <suggestionItems>
                                            <core:Item key="{purchGrpSource>Item}" text="{purchGrpSource>Item}" />
                                        </suggestionItems>
                                        <layoutData>
                                            <FlexItemData growFactor="1" />
                                        </layoutData>
                                    </Input>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement id="fePLANTCD" label="{captionMsg>/PURCHPLANT}" visible="{= ${VisibleFieldsData>/PLANTCD} === true ? true : false }">
                                <f:fields>
                                    <Input id="PLANTCD" value="{path: 'headerData>/PLANTCD', mandatory: 'PLANTCD'}" showSuggestion="true" suggestionItems="{path: 'purchPlantSource>/'}" showValueHelp="true" editable="{HeaderEdiEditableFieldsDatatModeModel>/PLANTCD}" valueStateText="Required"
                                         change="onInputLiveChange" valueHelpRequest="handleValueHelp" liveChange="onInputLiveChange">
                                        <suggestionItems>
                                            <core:Item key="{purchPlantSource>Item}" text="{purchPlantSource>Item}" />
                                        </suggestionItems>
                                        <layoutData>
                                            <FlexItemData growFactor="1" />
                                        </layoutData>
                                    </Input>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement id="feShipToPlant" label="{captionMsg>/SHIPTOPLANT}" visible="{= ${VisibleFieldsData>/SHIPTOPLANT} === true ? true : false }">
                                <f:fields>
                                    <Input id="SHIPTOPLANT" value="{path: 'headerData>/SHIPTOPLANT', mandatory: 'SHIPTOPLANT'}" showSuggestion="true" suggestionItems="{path: 'purchPlantSource>/'}" showValueHelp="true" editable="{HeaderEdiEditableFieldsDatatModeModel>/SHIPTOPLANT}" valueStateText="Required"
                                         change="onInputLiveChange" valueHelpRequest="handleValueHelp" liveChange="onInputLiveChange">
                                        <suggestionItems>
                                            <core:Item key="{purchPlantSource>Item}" text="{purchPlantSource>Item}" />
                                        </suggestionItems>
                                        <layoutData>
                                            <FlexItemData growFactor="1" />
                                        </layoutData>
                                    </Input>
                                </f:fields>
                            </f:FormElement>
                                                  
                        </f:formElements>
                    </f:FormContainer> 
                    <f:FormContainer ariaLabelledBy="Grp2">
                        <f:formElements>
                            <f:FormElement id="feCUSTGRP" label="{captionMsg>/CUSTGRP}" visible="{= ${VisibleFieldsData>/CUSTGRP} === true ? true : false }">
                                <f:fields>
                                    <Input id="CUSTGRP" value="{path: 'headerData>/CUSTGRP', mandatory: 'CUSTGRP'}" showSuggestion="true" suggestionItems="{path: 'custGrpSource>/'}" showValueHelp="true" editable="{EditableFieldsData>/CUSTGRP}" valueStateText="Required"
                                         change="onInputLiveChange" valueHelpRequest="handleValueHelp" liveChange="onInputLiveChange">
                                        <suggestionItems>
                                            <core:Item key="{custGrpSource>Item}" text="{custGrpSource>Item}" />
                                        </suggestionItems>
                                        <layoutData>
                                            <FlexItemData growFactor="1" />
                                        </layoutData>
                                    </Input>
                                </f:fields>
                            </f:FormElement>    
                            <f:FormElement id="feSALESGRP" label="{captionMsg>/SALESGRP}" visible="{= ${VisibleFieldsData>/SALESGRP} === true ? true : false }">
                                <f:fields>
                                    <Input id="SALESGRP" value="{path: 'headerData>/SALESGRP', mandatory: 'SALESGRP'}" showSuggestion="true" suggestionItems="{path: 'salesGrpSource>/'}" showValueHelp="true" editable="{EditableFieldsData>/SALESGRP}" valueStateText="Required"
                                         change="onInputLiveChange" valueHelpRequest="handleValueHelp" liveChange="onInputLiveChange">
                                        <suggestionItems>
                                            <core:Item key="{salesGrpSource>Item}" text="{salesGrpSource>Item}" />
                                        </suggestionItems>
                                        <layoutData>
                                            <FlexItemData growFactor="1" />
                                        </layoutData>
                                    </Input>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{captionMsg>/REQUISITIONER}" visible="{= ${VisibleFieldsData>/REQSTNR} === true ? true : false }">
                                <f:fields>
                                    <Input id="REQSTNR" value="{path: 'headerData>/REQSTNR', mandatory: 'REQSTNR'}" showSuggestion="true" showValueHelp="false" editable="{EditableFieldsData>/REQSTNR}" valueStateText="Required"
                                         change="onInputLiveChange" liveChange="onInputLiveChange">
                                    </Input>
                                </f:fields>
                            </f:FormElement>
                                                   
                        </f:formElements>
                    </f:FormContainer>  
                </f:formContainers>
            </f:Form>            
            
        </Panel>
</core:FragmentDefinition>