<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" 
xmlns:core="sap.ui.core" class="sapUiSizeCompact" xmlns:tnt="sap.tnt"
xmlns:t="sap.ui.table">
        <Panel id="headerPanel" expandable="false" expanded="true" width="auto" class="sapUiSizeCompact">

            <headerToolbar>
                <Toolbar id="TB1" height="2rem">
                    <Title text="{i18n>Header}" />
                    <ToolbarSpacer />
                    <Button id="btnHdrSave" type="Ghost" icon="sap-icon://save" tooltip="{i18n>Savesaldocheader}" press="onSaveHeader" visible="true"/> 
                    <Button id="btnHdrCancel" type="Ghost" icon="sap-icon://decline" tooltip="{i18n>Canceledit}" press="cancelHeaderEdit" visible="true"/> 
                    
                </Toolbar>
            </headerToolbar>

            <MessageStrip id="HeaderMessageStrip" text="" showIcon="true" showCloseButton="true" class="sapUiMediumMarginBottom" type="Error" visible="false"/>
            
            <f:Form id="SalesDocHeaderForm1" editable="false" class="sapUiNoContentPadding">
                <f:layout>
                    <f:ResponsiveGridLayout columnsXL="4" columnsL="2" columnsM="1" singleContainerFullSize="false" />
                </f:layout>
                <f:formContainers>
                    <f:FormContainer ariaLabelledBy="Grp1" class="sapUiNoContentPadding" >
                        <f:formElements>
                            <f:FormElement label="Document Type" visible="{= ${VisibleFieldsData>/DOCTYP} === true ? true : false }">
                                <f:fields>
                                    <Input id="DOCTYP" value="{headerData>/DOCTYP}" showSuggestion="true" showValueHelp="true" editable="{EditableFieldsData>/CUSTGRP}" valueStateText="Required"
                                         change="onHeaderChange" valueHelpRequest="handleValueHelp" liveChange="onHeaderChange">
                                    </Input>
                                </f:fields>
                            </f:FormElement>   
                            <f:FormElement label="PR Number" visible="{= ${VisibleFieldsData>/PRNO} === true ? true : false }">
                                <f:fields>
                                    <Input id="PRNO" value="{headerData>/PRNO}" showSuggestion="true" showValueHelp="true" editable="{EditableFieldsData>/PRNO}" valueStateText="Required"
                                         change="onHeaderChange" valueHelpRequest="handleValueHelp" liveChange="onHeaderChange">
                                    </Input>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Purch. Grp." visible="{= ${VisibleFieldsData>/PURGRP} === true ? true : false }">
                                <f:fields>
                                    <Input id="PURGRP" value="{headerData>/PURGRP}" showSuggestion="true" showValueHelp="true" editable="{EditableFieldsData>/PURGRP}" valueStateText="Required"
                                         change="onHeaderChange" valueHelpRequest="handleValueHelp" liveChange="onHeaderChange">
                                    </Input>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Purch. Plant" visible="{= ${VisibleFieldsData>/PLANTCD} === true ? true : false }">
                                <f:fields>
                                    <Input id="PLANTCD" value="{headerData>/PLANTCD}" showSuggestion="true" showValueHelp="true" editable="{HeaderEdiEditableFieldsDatatModeModel>/PLANTCD}" valueStateText="Required"
                                         change="onHeaderChange" valueHelpRequest="handleValueHelp" liveChange="onHeaderChange">
                                    </Input>
                                </f:fields>
                            </f:FormElement>
                                                  
                        </f:formElements>
                    </f:FormContainer> 
                    <f:FormContainer ariaLabelledBy="Grp2">
                        <f:formElements>
                            <f:FormElement label="Customer Group" visible="{= ${VisibleFieldsData>/CUSTGRP} === true ? true : false }">
                                <f:fields>
                                    <Input id="CUSTGRP" value="{headerData>/CUSTGRP}" showSuggestion="true" showValueHelp="true" editable="{EditableFieldsData>/CUSTGRP}" valueStateText="Required"
                                         change="onHeaderChange" valueHelpRequest="handleValueHelp" liveChange="onHeaderChange">
                                    </Input>
                                </f:fields>
                            </f:FormElement>    
                            <f:FormElement label="Sales Goup" visible="{= ${VisibleFieldsData>/SALESGRP} === true ? true : false }">
                                <f:fields>
                                    <Input id="SALESGRP" value="{headerData>/SALESGRP}" showSuggestion="true" showValueHelp="true" editable="{EditableFieldsData>/SALESGRP}" valueStateText="Required"
                                         change="onHeaderChange" valueHelpRequest="handleValueHelp" liveChange="onHeaderChange">
                                    </Input>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Requisitioner" visible="{= ${VisibleFieldsData>/REQSTNR} === true ? true : false }">
                                <f:fields>
                                    <Input id="REQSTNR" value="{headerData>/REQSTNR}" showSuggestion="true" showValueHelp="false" editable="{EditableFieldsData>/REQSTNR}" valueStateText="Required"
                                         change="onHeaderChange" liveChange="onHeaderChange">
                                    </Input>
                                </f:fields>
                            </f:FormElement>
                                                   
                        </f:formElements>
                    </f:FormContainer>  
                </f:formContainers>
            </f:Form>            
            
        </Panel>
</core:FragmentDefinition>