<mvc:View controllerName="zuipr.controller.PRDet" 
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true" 
    xmlns:u="sap.uxap"
    xmlns="sap.m" 
    xmlns:l="sap.ui.layout" 
    xmlns:f="sap.ui.layout.form" 
    xmlns:core="sap.ui.core" 
    class="sapUiSizeCompact" 
    xmlns:tnt="sap.tnt"
    xmlns:c="zuipr.control" 
    xmlns:t="sap.ui.table" >
    <Page showHeader="false" title="Manage Style" showNavButton="true" navButtonPress="onNavBack">

        <!-- OBJECT HEADER -->
        <ObjectHeader id="objectHeader" responsive="true" fullScreenOptimized="true" intro="PR Item: {headerData>/PRITM}" backgroundDesign="Solid" icon="sap-icon://blank-tag-2"
		        title="PR No: {headerData>/PRNO}" number="{headerData>/Statuscd}" numberUnit="{i18n>Status}" numberState="{= ${headerData>/Statuscd} === 'CMP' ? 'Success' : ${headerData>/Statuscd} === 'CRT' ? 'Error' : 'Warning'}">
            <attributes>
                <ObjectAttribute title="Created By" text="{headerData>/CREATEDBY}"/>
                <ObjectAttribute title="Change On" text="{headerData>/CHANGEDT}"/>
            </attributes>
        </ObjectHeader>
         <!-- HEADER -->
        <core:Fragment fragmentName="zuipr.view.fragments.PRHeader" type="XML"/>
         
        <!-- DETAILS -->
        <Panel id="detailPanel" expandable="true" expanded="false" width="auto" class="sapUiSizeCompact">
            <headerToolbar>
                <Toolbar height="3rem" style="Clear">
                    <Title text="{i18n>Detail}" />
                </Toolbar>
            </headerToolbar>
            <IconTabBar tabDensityMode="Cozy" expandable="false" class="sapUiNoContentPadding">
                <items>
                    <IconTabFilter text="Material Data" tooltip="{i18n>Styleattributes}">
                        <core:Fragment fragmentName="zuipr.view.fragments.MaterialData" type="XML"/>
                    </IconTabFilter>

                    <!-- VERSIONS -->
                    <IconTabFilter text="Quantities/Dates" tooltip="{i18n>Manageversions}">
                        <core:Fragment fragmentName="zuipr.view.fragments.QtyDates" type="XML"/>
                    </IconTabFilter>

                    <!-- ATTACHMENTS -->
                    <IconTabFilter text="Supply Type" tooltip="{i18n>Manageattachments}">
                        <core:Fragment fragmentName="zuipr.view.fragments.SupplyType" type="XML"/>
                    </IconTabFilter>
                     <!-- ATTACHMENTS -->
                    <IconTabFilter text="Customer Data" tooltip="{i18n>Manageattachments}">
                        <core:Fragment fragmentName="zuipr.view.fragments.CustomerData" type="XML"/>
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </Panel>
        
        <!-- <VBox height="200px"/> -->
    </Page>
</mvc:View>